pipeline {

  options {
    ansiColor('xterm')
  }

  agent {
    kubernetes {
      yamlFile 'builder.yaml'
    }
  }

  stages {

    stage('Kaniko Build & Push "cartservice" Image') {
      steps {
        container('kaniko') {
          script {
            sh '''
            /kaniko/executor --dockerfile `pwd`/src/cartservice/src/Dockerfile \
                             --context `pwd`/src/cartservice/src/ \
                             --destination=marinyuk/cartservice:${BUILD_NUMBER}
            '''
          }
        }
      }
    }
     
  }
}